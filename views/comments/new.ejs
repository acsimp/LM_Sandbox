<% include ../partials/header %>

    <div class="row"></div>
        <h1 style="text-align:center">Add a New Comment to <%= place.name %></h1>
        <div style="width:30%; min-width:250px; margin: 25px auto; ">
            <form action="/places/<%= place._id %>/comments" method="POST">
                <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/places/<%= place._id %>">Go Back</a>
        </div>
    <% include ../partials/footer %>